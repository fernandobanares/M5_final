package runners;

import org.junit.platform.suite.api.ConfigurationParameter;
import org.junit.platform.suite.api.IncludeEngines;
import org.junit.platform.suite.api.SelectClasspathResource;
import org.junit.platform.suite.api.Suite;

import static io.cucumber.junit.platform.engine.Constants.PLUGIN_PROPERTY_NAME;
import static io.cucumber.junit.platform.engine.Constants.GLUE_PROPERTY_NAME;
import static io.cucumber.junit.platform.engine.Constants.FEATURES_PROPERTY_NAME;
import static io.cucumber.junit.platform.engine.Constants.FILTER_TAGS_PROPERTY_NAME;

/**
 * RegressionTestRunner - Runner para ejecutar pruebas de regresión completas
 * 
 * Este runner ejecuta todas las pruebas de regresión, excluyendo solo
 * las que están en desarrollo (WIP - Work In Progress).
 * 
 * Para ejecutar: mvn test -Dtest=RegressionTestRunner
 */
@Suite
@IncludeEngines("cucumber")
@SelectClasspathResource("features")
@ConfigurationParameter(key = FEATURES_PROPERTY_NAME, value = "src/test/resources/features")
@ConfigurationParameter(key = GLUE_PROPERTY_NAME, value = "steps,hooks")
@ConfigurationParameter(key = PLUGIN_PROPERTY_NAME, value = 
    "pretty," +
    "html:reports/regression-reports," +
    "json:reports/regression-reports/Regression.json," +
    "junit:reports/regression-reports/Regression.xml")
@ConfigurationParameter(key = FILTER_TAGS_PROPERTY_NAME, value = "@Regression and not @WIP")
public class RegressionTestRunner {
    
    /**
     * Runner para ejecutar pruebas de regresión completas
     * 
     * CARACTERÍSTICAS:
     * - Ejecuta todos los escenarios marcados con @Regression
     * - Excluye escenarios en desarrollo (@WIP)
     * - Genera reportes detallados en: reports/regression-reports/
     * - Ideal para releases y validaciones completas
     * - Tiempo de ejecución: 15-30 minutos
     * 
     * ESCENARIOS INCLUIDOS:
     * - Todos los casos de login (válidos e inválidos)
     * - Todos los casos de registro
     * - Validaciones de límites y caracteres especiales
     * - Pruebas de seguridad básicas
     * - Casos edge y boundary testing
     * 
     * ESCENARIOS EXCLUIDOS:
     * - @WIP (Work In Progress)
     * - @Manual (Pruebas manuales)
     * - @Performance (Pruebas de rendimiento)
     */
}
