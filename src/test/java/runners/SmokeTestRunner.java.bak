package runners;

import org.junit.platform.suite.api.ConfigurationParameter;
import org.junit.platform.suite.api.IncludeEngines;
import org.junit.platform.suite.api.SelectClasspathResource;
import org.junit.platform.suite.api.Suite;

import static io.cucumber.junit.platform.engine.Constants.PLUGIN_PROPERTY_NAME;
import static io.cucumber.junit.platform.engine.Constants.GLUE_PROPERTY_NAME;
import static io.cucumber.junit.platform.engine.Constants.FEATURES_PROPERTY_NAME;
import static io.cucumber.junit.platform.engine.Constants.FILTER_TAGS_PROPERTY_NAME;

/**
 * SmokeTestRunner - Runner específico para ejecutar solo Smoke Tests
 * 
 * Este runner ejecuta únicamente las pruebas críticas marcadas con @SmokeTest.
 * Ideal para ejecuciones rápidas en CI/CD o verificaciones básicas.
 * 
 * Para ejecutar: mvn test -Dtest=SmokeTestRunner
 */
@Suite
@IncludeEngines("cucumber")
@SelectClasspathResource("features")
@ConfigurationParameter(key = FEATURES_PROPERTY_NAME, value = "src/test/resources/features")
@ConfigurationParameter(key = GLUE_PROPERTY_NAME, value = "steps,hooks")
@ConfigurationParameter(key = PLUGIN_PROPERTY_NAME, value = 
    "pretty," +
    "html:reports/smoke-test-reports," +
    "json:reports/smoke-test-reports/SmokeTest.json," +
    "junit:reports/smoke-test-reports/SmokeTest.xml")
@ConfigurationParameter(key = FILTER_TAGS_PROPERTY_NAME, value = "@SmokeTest")
public class SmokeTestRunner {
    
    /**
     * Runner para ejecutar solo pruebas de Smoke Test
     * 
     * CARACTERÍSTICAS:
     * - Ejecuta solo escenarios marcados con @SmokeTest
     * - Genera reportes en carpeta específica: reports/smoke-test-reports/
     * - Ideal para verificaciones rápidas y CI/CD
     * - Tiempo de ejecución: < 5 minutos
     * 
     * ESCENARIOS INCLUIDOS:
     * - Login exitoso básico
     * - Registro exitoso básico
     * - Validaciones críticas de campos vacíos
     * - Funcionalidades core del sistema
     */
}
